@sim
$a=h
kx1=0
ky1=0
kx2=1
ky2=0
ret=[kx1,ky1]*[(kx2-kx1),(ky1-ky2),(ky2-ky1),(kx2-kx1)]

@rot
$a=h
ka=0
ret=[cos(ka),-sin(ka),sin(ka),cos(ka)]

@G1
$dim=2
$n=shift
pi=2*asin(1)
D1=([0,0]|[1,0]|[2,0]|[0,1]|[2,1]|[0,2]|[1,2]|[2,2])
K1=1/3*D1*K1
sh1=K1|[1/27,0]*K1
D2=([0,0]|[1,0]|[1/2,3^.5/2])
K2=1/2*D2*K2
sh2=K2|[1/8,0]*K2
D3=([0,0]|[2,0]|[1,0]*rot(pi/3)|[1.5,3^0.5/2]*rot(-pi/3))
K3=1/3*D3*K3
sh3=K3|[1/27,0]*K3